<div class="profile">
  <div class="container">

    <div class="btn-container">
      <a href="/dashboard"><button>Go back</button></a>
    </div>
    <div class="text-wrapper">

      <h1>Hi! <span>{{userDetails.username}}</span></h1>

    </div>

    <div class="info-container">
      <h1 id="heading">Your Activity</h1>
      <div class="main-wrapper">
        <div class="profile-wrapper">
          <i class="fab fa-github"></i>
          <h1>Total commits</h1>
          <h2>04</h2>
        </div>

        <div class="profile-wrapper">
          <i class="far fa-list-alt"></i>
          <h1>Total todo</h1>
          <h2>{{todoCount}}</h2>
        </div>

        <div class="profile-wrapper">
          <i class="far fa-sticky-note"></i>
          <h1>Total notes</h1>
          <h2>{{notesCount}}</h2>
        </div>

        <div class="profile-wrapper">
          <i class="far fa-clock"></i>
          <h1>Total pomodoro</h1>
          <h2>11</h2>
        </div>
      </div>

    </div>

    <div class="user-container">
      <h1 id="info-heading">Your Profile </h1>
      <h3>Level 1</h3>

      <div class="info-wrapper">

        <h1>Name: <span>{{userDetails.username}}</span></h1>
        <h1>Activity score: <span>{{totalCount}}</span></h1>
        <h1>Email: <span>{{userDetails.email}}</span></h1>

      </div>

      <div class="change-wrapper">
        <div class="change-info-wrapper">
          <h1>Edit Profile</h1>
        </div>
      </div>

      <div class="side-wrapper">
        <div class="side-sub-wrapper">
          <div class="four-btn-wrapper">
            <div class="profile-side-btn">
              <i class="fab fa-github"></i>
            </div>
            <div class="profile-side-btn">
              <i class="far fa-list-alt"></i>
            </div>
            <div class="profile-side-btn">
              <i class="far fa-sticky-note"></i>
            </div>
            <div class="profile-side-btn">
              <i class="far fa-clock"></i>
            </div>
          </div>

          <div class="table-btn-wrapper">
            <h3>Level Chart</h3>
          </div>

        </div>
      </div>

    </div>

  </div>
</div>