<div class="signupPage">
  <div class="container">

    <img src="/images/logo.png" alt="logo" />

    <form action="/signup" method="POST">
      <div class="content">

        <h1>Signup</h1>

        <h3 id="username-text">username</h3>
        <input required type="text" name="username" id="username-inp" />

        <h3 id="email-text">email</h3>
        <input required type="email" name="email" id="email-inp" />

        <h3 id="password-text">password</h3>
        <input required type="password" name="password" id="password-inp" />

        <h3 id="confirmpassword-text">confirm password</h3>
        <input
          required
          type="password"
          name="confirm-password"
          id="confirmpassword-inp"
        />

        <button type="submit" id="signup-btn">signup</button>

      </div>
    </form>

    <form action="/">
      <button type="submit" id="goback-btn">go back</button></form>

  </div>
</div>